@using Classwork___April_16.data
@model GameSignupViewModel


@if (Model.EventStatus == EventStatus.Past)
{
    <div class="container" style="margin-top: 40px">
        <div style="text-align: center">
            <h1>Sorry, There are no upcoming games. Try agin later!</h1>
        </div>
    </div>
}
else
{
    if (Model.EventStatus == EventStatus.Full)
    {
        <div class="container" style="margin-top: 40px">
            <div style="text-align: center">
                <h1>Sorry, Game is Full. Try again next time!</h1>
            </div>
        </div>
    }



    else
    {
        <div class="container" style="margin-top: 40px; display: flex; align-items: center; flex-direction: column; ">
            <h1>Signing up for Upcoming Game on @Model.Event.Date.ToLongDateString()</h1>
            <div class="row">
                <form action="/User/Signup" method="post">
                    <input type="hidden" value="@Model.Event.Id" name="eventId" class="form-control" />
                    <label for="firstName">First Name</label>
                    <input type="text" placeholder="First Name" name="firstName" class="form-control" value="@Model.Player.FirstName" />
                    <br />
                    <label for="lastName">Last Name</label>
                    <input type="text" placeholder="Last Name" name="lastName" class="form-control" value="@Model.Player.LastName" />
                    <br />
                    <label for="email">Email</label>
                    <input type="text" placeholder="Email" name="email" class="form-control" value="@Model.Player.Email" />
                    <br />
                    <div style="display: flex;
  align-items: center;
  justify-content: center;"><button class="btn btn-success">Signup</button></div>
                </form>
            </div>
        </div>
    }
}


